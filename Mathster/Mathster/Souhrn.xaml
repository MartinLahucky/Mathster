<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mathster.Souhrn"
             NavigationPage.HasBackButton="False">
    <ContentPage.Resources>
        <StyleSheet Source="Helpers/Styles/Komponenty.css"/>
    </ContentPage.Resources>
    
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="MenuToolbarButton" Order="Primary" Priority="1" Clicked="MenuButton_OnClicked" />
    </ContentPage.ToolbarItems>

    
    <ContentPage.Content>
        <StackLayout>
            <ScrollView x:Name="View">
                <StackLayout x:Name="SecondLayer"  VerticalOptions="Center" Margin="20">
                    
                    <Label x:Name="NadpisSouhrnLabel"  HorizontalOptions="Center" StyleClass="FialovaNadpidLabel"/>
                    
                    <Frame StyleClass="FrameTmaveFialova" CornerRadius="25" Padding="10,10,10,10" >
                        <StackLayout>
                        <!-- +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++  -->
                           <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>
                                
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70*"/>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="70*"/>
                                </Grid.ColumnDefinitions>
                               
                               <!-- dobře počet okýnko -->
                               <Image Source="dobre_ikona.png" Grid.Column="0" Grid.Row="0" />
                               <Button x:Name="DobrePocetButton" CornerRadius="25"  Grid.Column="0" Grid.Row="1" WidthRequest="200" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black" FontSize="30" Clicked="DobreButton_OnClicked"/> 
                               
                                
                               
                               <!-- špatně počet okýnko -->
                               <Image Source="spatne_ikona.png" Grid.Column="2" Grid.Row="0"/>
                               <Button x:Name="SpatnePocetButton" CornerRadius="25" Grid.Column="2" Grid.Row="1" WidthRequest="200" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black" FontSize="30" Clicked="SpatneButton_OnClicked"/>
                           </Grid>
                            
                            <!-- listview -->
                           <Frame Padding="0" Margin="0,30,0,0" HasShadow="False" CornerRadius="25" >
                               <!-- StyleClass="FrameTmaveFialova" -->
                               <StackLayout>
                                   <ListView x:Name="VysledkyList"   HeightRequest="250" ItemTapped="VysledkyList_OnItemTapped">
                                       <ListView.ItemTemplate>
                                           <DataTemplate>
                                               <ViewCell>
                                                   <StackLayout BackgroundColor="#4d4dfc">
                                                   <StackLayout x:Name="BarvaCellu" BackgroundColor="#7F7FFD" Orientation="Horizontal" >
                                                       <Frame BackgroundColor="Transparent" HasShadow="False" Padding="15,0">
                                                           <Image x:Name="VysledekImage" Source="dobre_ikona.png"/> 
                                                       </Frame>
                                                       <Label x:Name="VysledekLabel" Text="{Binding TextovaPodobaPrikladu}" FontSize="30"  TextColor="Black" Padding="10,0,0,0"/>
                                                    </StackLayout>
                                                   </StackLayout>
                                               </ViewCell>
                                           </DataTemplate>
                                       </ListView.ItemTemplate>
                                   </ListView>
                               </StackLayout>
                           </Frame>
                        
                        </StackLayout>
                    </Frame>
                    
                    <Button x:Name="MenuButton" StyleClass="Tlacitka" CornerRadius="30" Margin="40,10,40,20" Clicked="MenuButton_OnClicked"/>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>