        <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Frame x:Name="Frame1" Margin="30,20,30,0" HasShadow="False" CornerRadius="0" Padding="20,20,10,6" StyleClass="FrameONas" >
