                </Frame>
                <Frame x:Name="Frame11" Margin="30,-10,30,0" HasShadow="False" CornerRadius="0" Padding="20,8,10,6" StyleClass="FrameONas"> 
                        <Label x:Name="Label11" TextColor="Black" FontSize="18"/>
                </Frame>
                <StackLayout Margin="30,20,30,0">
                    <Button x:Name="ResetStatsButton" BorderWidth="2" StyleClass="RestartButton" CornerRadius="5" FontSize="20" Margin="0,0,0,20" Clicked="ResetStatsButton_OnClicked"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>