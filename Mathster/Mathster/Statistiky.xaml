                <Label x:Name="Label4" TextColor="Black" FontSize="16"/>
                </Frame>
                <Frame x:Name="Frame5" Margin="30,-10,30,0" HasShadow="False" CornerRadius="0" Padding="20,8,10,6" StyleClass="FrameONas">        
