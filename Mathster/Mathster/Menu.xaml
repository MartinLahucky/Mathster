<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mathster.Menu"
             NavigationPage.HasBackButton="False">
    <ContentPage.Resources>
        <StyleSheet Source="Helpers/Styles/Komponenty.css"/>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout>

            <StackLayout BackgroundColor="#4D4DFC">
                <Frame BackgroundColor="#7F7FFD" Margin="30,20,30,0" CornerRadius="100" Padding="45,20" HorizontalOptions="Center">
                    <Label x:Name="levelLabel" Text="6" TextColor="White" FontSize="68"/>
                </Frame>

                <ProgressBar IsVisible="True" ProgressColor="#C9FF50" Progress="0.2" Margin="120,0,120,0" />
                <Label Text="Mathster Lite" TextColor="White" HorizontalOptions="Center" FontSize="30" Margin="0" Padding="0"/>
            </StackLayout>

            <Button x:Name="NahodneButton" Margin="100,20,100,0" BackgroundColor="#4D4DFC" Text="?" TextColor="White" FontSize="30"
                    VerticalOptions="EndAndExpand" CornerRadius="50" Clicked="NahodneButton_OnClicked" />
            <Grid Margin="40,10" VerticalOptions="End" HorizontalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="130"/>
                    <RowDefinition Height="130"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="ScitaniButton" CornerRadius="57" FontSize="40" Text="+" TextColor="White" Margin="33,18"
                        BackgroundColor="#4D4DFC" Grid.Column="0" Grid.Row="0" Clicked="ScitaniButton_OnClicked" />

                <Button x:Name="OdcitaniButton" CornerRadius="57" FontSize="40" Text="-" TextColor="White" Margin="33,18"
                        BackgroundColor="#4D4DFC" Grid.Column="1" Grid.Row="0" Clicked="OdcitaniButton_OnClicked"  />

                <Button x:Name="NasobeniButton" CornerRadius="57" FontSize="40" Text="×" TextColor="White" Margin="33,18"
                        BackgroundColor="#4D4DFC" Grid.Column="0" Grid.Row="1" Clicked="NasobeniButton_OnClicked" />

                <Button x:Name="DeleniButton" CornerRadius="57" FontSize="40" Text="÷" TextColor="White" Margin="33,18"
                        BackgroundColor="#4D4DFC" Grid.Column="1" Grid.Row="1" Clicked="DeleniButton_OnClicked" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>