<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mathster.NastaveniPrikladu"
             x:Name="NastaveniPrikladuContentPage"
             Title="Nastavení Příkladů">
             
    <ContentPage.Resources>
        <StyleSheet Source="Helpers/Styles/Komponenty.css"/>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="MenuToolbarButton" Order="Primary" Priority="1" Clicked="MenuButton_OnClicked" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <!--počet příkladů:-->
            <ScrollView>
                <StackLayout>
            
                <Frame Margin="30,10,30,2" BackgroundColor="#4D4DFC" CornerRadius="40">
                <StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label x:Name= "nazev1Label" StyleClass="NastaveniPrikladuNazevLabel" VerticalOptions="CenterAndExpand"/>
                        <Frame x:Name="Frame1" StyleClass="NastaveniPrikladuFrame" HorizontalOptions="EndAndExpand">
                            <Label x:Name="pocetPrikladuLabel" StyleClass="NastaveniPrikladuLabel" VerticalOptions="Center" HorizontalOptions="Center"/>
                        </Frame>
                    </StackLayout>

                    <Slider x:Name="pocetPrikladuSlider" 
                            MaximumTrackColor="#484848" 
                            MinimumTrackColor="#FCA54D" 
                            ThumbColor="White"
                            ValueChanged="pocetPrikladu_ValueChanged" />
                </StackLayout>
            </Frame>

            
                    <!--počet cifer:-->
                    <Frame Margin="30,2,30,2" BackgroundColor="#4D4DFC" CornerRadius="40">
                        <StackLayout>
                            <StackLayout Orientation="Horizontal">
                                <Label x:Name= "nazev2Label" StyleClass="NastaveniPrikladuNazevLabel" VerticalOptions="CenterAndExpand"/>
                                <Frame x:Name="Frame2" StyleClass="NastaveniPrikladuFrame" HorizontalOptions="EndAndExpand">
                                    <Label x:Name="pocetCiferLabel" StyleClass="NastaveniPrikladuLabel" VerticalOptions="Center" HorizontalOptions="Center"/>
                                </Frame>
                            </StackLayout>

                            <Slider x:Name="pocetCiferSlider" 
                                    MaximumTrackColor="#484848" 
                                    MinimumTrackColor="#FCA54D" 
                                    ThumbColor="White"
                                    ValueChanged="pocetCiferSlider_ValueChanged" />
                        </StackLayout>
                    </Frame>

                    
                    <!--velikost dělitele:-->
                    <Frame x:Name="DeleniANasbeniFrame" Margin="30,2,30,2" BackgroundColor="#4D4DFC" CornerRadius="40">
                        <StackLayout>
                            <StackLayout Orientation="Horizontal">
                                <Label x:Name= "nazev3Label" StyleClass="NastaveniPrikladuNazevLabel" VerticalOptions="CenterAndExpand"/>
                                <Frame x:Name="Frame3" StyleClass="NastaveniPrikladuFrame" HorizontalOptions="EndAndExpand">
                                    <Label x:Name="velikostDeliteleLabel" StyleClass="NastaveniPrikladuLabel" VerticalOptions="Center" HorizontalOptions="Center" />
                                </Frame>
                            </StackLayout>

                            <Slider x:Name="velikostDeliteleSlider" 
                                    MaximumTrackColor="#484848" 
                                    MinimumTrackColor="#FCA54D" 
                                    ThumbColor="White"
                                    ValueChanged="velikostDeliteleSlider_ValueChanged" />
                        </StackLayout>
                    </Frame>
                    
                </StackLayout>
            </ScrollView>
            
            <!--dolní button:-->  
            
            <Button x:Name="DalsiButton" Margin="20,5,20,25" Padding="0"
                    TextColor="white"
                    StyleClass="DalsiTlacitko"
                    Clicked="DalsiButton_OnClicked"
                    VerticalOptions="EndAndExpand"/>
                
            <!-- <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="0" BackgroundColor="Aquamarine" > -->
            <!--     <Button x:Name="DalsiButton" Margin="0" Padding="0" -->
            <!--             TextColor="white" -->
            <!--             StyleClass="DalsiTlacitko" -->
            <!--             AbsoluteLayout.LayoutFlags="None" -->
            <!--             AbsoluteLayout.LayoutBounds="10,10,50,50" Clicked="DalsiButton_OnClicked"/> -->
            <!-- </AbsoluteLayout> -->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>