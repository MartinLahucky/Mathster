          <!--   Grid.Column="1" -->
          <!--   Grid.Row="2" -->
          <!--   ProgressColor="#33A715" -->
          <!--   Progress="0.33" /> -->
          
          </Grid>
        
      </ListView.Header>
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            
            <Frame x:Name="FrameStyl" BackgroundColor="#33A716" CornerRadius="20" Padding="15,0,0,0" Margin="-18,10,60,5" HasShadow="False" >
              <StackLayout Padding="15,10" HorizontalOptions="FillAndExpand">
              <Label VerticalOptions="FillAndExpand"
                     StyleClass="MiniMenu"
                     Padding="2"
                     TextColor="White"
                     TextType="Html"
                     VerticalTextAlignment="Center" 
                    Text=" {Binding Title} "
                    d:Text="{Binding .}"
                    FontSize="24"/>
            </StackLayout>
            </Frame>
            
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>