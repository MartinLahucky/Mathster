<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mathster.Summary">
    <ContentPage.Resources>
        <StyleSheet Source="Resources/Styles/Components.css" />
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="MenuToolbarButton" Order="Primary" Priority="1" Clicked="MenuButton_OnClicked" />
    </ContentPage.ToolbarItems>


    <ContentPage.Content>
        <ScrollView x:Name="View">
            <StackLayout>
                <StackLayout VerticalOptions="Center" Margin="20">

                    <Label x:Name="TitleSummaryLabel" HorizontalOptions="Center" StyleClass="TitlePurpleLabel" />

                    <Frame StyleClass="FrameDarkPurple" CornerRadius="25" Padding="10,10,10,10">
                        <StackLayout>
                            <!-- +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++  -->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70*" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="70*" />
                                </Grid.ColumnDefinitions>

                                <!-- correct counter -->
                                <StackLayout  Margin="5, 4" Padding="0,-10,0,0" BackgroundColor="Transparent" HorizontalOptions="Center">
                                    <Path  Data="M5.09519 30.8142C5.84952 30.0082 7.11419 29.9658 7.9208 30.7195L19.0258 41.0952C19.8324 41.8488 21.0971 41.8064 21.8514 41.0005L46.1013 15.0914C46.8561 14.2849 48.1217 14.243 48.9281 14.9978L53.5507 19.3244C54.3572 20.0792 54.3991 21.3448 53.6443 22.1513L28.0175 49.5315L23.1761 54.7042C22.4213 55.5106 21.1557 55.5525 20.3492 54.7977L1.71279 37.3548C0.906349 36.6 0.864481 35.3344 1.61928 34.5279L5.09519 30.8142Z" Fill="#C9FF50"/>
                                </StackLayout>
                                <!-- <Image Source="correct_icon.png" Grid.Column="0" Grid.Row="0" /> -->
                                <Button x:Name="CorrectCountButton" BackgroundColor="#FFFFFF" CornerRadius="25"
                                        Grid.Column="0" Grid.Row="1" WidthRequest="200" HorizontalOptions="Center"
                                        VerticalOptions="Center" TextColor="Black" FontSize="30"
                                        Clicked="CorrectCountButton_OnClicked" />


                                <!-- wrong counter -->
                                <StackLayout Grid.Column="2" Grid.Row="0" Margin="5,0,1,0" Padding="5"  BackgroundColor="Transparent" HorizontalOptions="Center">
                                    <Path Data="M16.0222 10.1545L7.2819 1.41421C6.50085 0.633165 5.23452 0.633164 4.45347 1.41421L1.41422 4.45347C0.633168 5.23451 0.633169 6.50085 1.41422 7.28189L15.961 21.8287C16.742 22.6097 16.742 23.876 15.961 24.6571L1.41422 39.2038C0.633171 39.9849 0.63317 41.2512 1.41422 42.0323L4.45347 45.0715C5.23452 45.8526 6.50085 45.8526 7.2819 45.0715L16.0222 36.3312L21.0995 31.254L21.8287 30.5248C22.6097 29.7437 23.876 29.7437 24.6571 30.5248L39.2039 45.0715C39.9849 45.8526 41.2512 45.8526 42.0323 45.0715L45.0715 42.0323C45.8526 41.2512 45.8526 39.9849 45.0715 39.2038L36.3312 30.4635L31.254 25.3863L30.5248 24.6571C29.7437 23.876 29.7437 22.6097 30.5248 21.8287L31.254 21.0995L36.3312 16.0222L45.0715 7.28189C45.8526 6.50084 45.8526 5.23451 45.0715 4.45347L42.0323 1.41421C41.2512 0.633165 39.9849 0.633166 39.2039 1.41421L24.6571 15.961C23.876 16.742 22.6097 16.742 21.8287 15.961L21.0995 15.2318L16.0222 10.1545Z" Fill="#FCA54D"/>
                                </StackLayout>
                                <!-- <Image Source="wrong_icon.png" Grid.Column="2" Grid.Row="0" /> -->
                                <Button x:Name="WrongCountButton" BackgroundColor="#FFFFFF" CornerRadius="25"
                                        Grid.Column="2" Grid.Row="1" WidthRequest="200" HorizontalOptions="Center"
                                        VerticalOptions="Center" TextColor="Black" FontSize="30"
                                        Clicked="WrongCountButton_OnClicked" />
                            </Grid>

                            <!-- listview -->
                            <Frame Padding="0" Margin="0,30,0,0" HasShadow="False" CornerRadius="25">
                                <StackLayout>
                                    <ListView x:Name="ResultList" HeightRequest="250"
                                              ItemTapped="ResultList_OnItemTapped" BackgroundColor="#7F7FFD">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <ViewCell>
                                                    <StackLayout x:Name="BorderLayout" BackgroundColor="#4d4dfc">
                                                        <StackLayout x:Name="CellColor"
                                                                     BackgroundColor="{Binding CellColor}"
                                                                     Orientation="Horizontal">
                                                            <StackLayout BackgroundColor="#7F7FFD" Padding="0">
                                                                <Image x:Name="ResultImage"
                                                                       VerticalOptions="CenterAndExpand"
                                                                       Source="{Binding Image}" Margin="15,0" />
                                                            </StackLayout>
                                                            <Label x:Name="ResultLabel"
                                                                   Text="{Binding Assignment}" FontSize="30"
                                                                   TextColor="{Binding TextColor}" Padding="10,0,0,0" />
                                                        </StackLayout>
                                                    </StackLayout>
                                                </ViewCell>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </Frame>
                </StackLayout>
                <Button x:Name="MenuButton" Clicked="MenuButton_OnClicked" Margin="80,0,80,20" StyleClass="Button"
                        CornerRadius="30" VerticalOptions="EndAndExpand" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>